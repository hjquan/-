                <span v-text="approveApolyType"></span>申请</div>
            <a class="aui-pull-right aui-btn">
                <!-- <i class="aui-iconfont aui-icon-menu" tapmode onclick="openquelity(1)"></i> -->
                <img class="img_h" src="../../../../../image/qualityproblem/shuaixuan.png" tapmode alt="">
            </a>
        </header>
        <div class="content">
            <div class="month-list">
                <div class="name-img">
                    张一山
                </div>
                <div class="month-user-name">
                    张一山
                    <div class="approve">审批中</div>
                </div>
            </div>
            <div class="user-list">
                <div class="list-height">
                    <div class="user-left">
                        开始时间
                    </div>
                    <div class="user-right">
                        2018-04-04 上午
                    </div>
                </div>
            </div>
            <div class="user-list">
                <div class="list-height">
                    <div class="user-left">
                        补卡时间
                    </div>
                    <div class="user-right">
                        2018-04-04 上午
                    </div>
                </div>
            </div>
            <div class="user-list">
                <div class="list-height">
                    <div class="user-left">
                        时长(天)
                    </div>
                    <div class="user-right">
                        0.5 天
                    </div>
                </div>
            </div>
            <div class="user-list">
                <div class="list-height2">
                    <div class="user-left">
                        请假事由
                    </div>
                    <div class="cause-right">
                        很有说服力的原因，很有说服力的原因，有两行……
                    </div>
                </div>
            </div>
            <!-- <div>
                <div class="imgItem" v-for="(item,index) in imgSrc" tapmode="hover">
                    <img :src="item" alt="" tapmode @click="imgSee(imgSrc,index)">
                </div>
            </div> -->
        </div>
        <div class="flow-text">
            <div class="check-text">
                <div class="check-text1">
                    <div class="check-time">
                        <div>10-24</div>
                        <div>09:30</div>
                    </div>
                    <div class="check-text-radius"></div>
                    <div class="check-text-name"> <span>张三 </span> <span>待审批 </span></div>
                </div>
                <div class="broder-vertical">1111111111111111111111111111111</div>
                <div class="check-text1 check-text1-margin-top">
                    <div class="check-time">
                        <div>10-24</div>
                        <div>09:30</div>
                    </div>
                    <div class="check-text-radius"></div>
                    <div class="check-text-name"> <span>张三 </span> <span>待审批 </span></div>
                </div>
            </div>
        </div>
        <div class="footer">

        </div>
    </div>
    <script src="../../../../../script/api.js"></script>
    <script src="../../../../../script/sha1.js"></script>
    <script src="../../../../../script/common.js"></script>
    <script src="../../../../../script/vue.js"></script>

    <script>
        apiready = function () {
            //侵入式导航栏
            $api.fixStatusBar($api.dom('header'));
            var offset = $api.offset($api.byId('header'));

            var vm = new Vue({
                el: "#app",
                data: {
                    approveApolyInfo: api.pageParam.approveApolyInfo,  //请假申请信息
                    approveApolyType: null,
                },
                created: function () {
                    //格式数据
                    this.formatDate();
                },
                methods: {
                    //格式数据
                    formatDate: function () {
                        console.log("请假申请信息" + JSON.stringify(this.approveApolyInfo))
                        switch (this.approveApolyInfo.leaveType) {
                            case "1":
                                this.approveApolyType = "事假"
                                break;
                            case "2":
                                this.approveApolyType = "病假"
                                break;
                            case "3":
                                this.approveApolyType = "调休"
                                break;
                            case "4":
                                this.approveApolyType = "产假"
                                break;
                            case "5":
                                this.approveApolyType = "婚假"
                                break;
                            case "6":
                                this.approveApolyType = "丧家"
                                break;
                        }
                    },
                },
            });
        }
        function closeWin() {
            api.closeWin();
        }
    </script>
</body>

</html>