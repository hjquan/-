<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title></title>
    <!-- <link rel="stylesheet" type="text/css" href="../css/api.css"/> -->
    <!-- <link rel="stylesheet" type="text/css" href="../css/style.css"/> -->
    <link rel="stylesheet" href="../../../commonUi/aui/css/aui.css">
    <style>
    html,body{height: 100%}
        .hover {
            opacity: 0.6;
        }

        .header_title {
            font-size: 18px;
            font-weight: 500;
            color: rgba(51, 51, 51, 1);
        }

        .flex_start {
            justify-content: flex-start !important;
        }


        .triange_bg:before {
            content: '';
            height: 26px;
            width: 26px;
            background: url('../../../image/triangle.png') 0 0 no-repeat;
            background-size: cover;
            position: absolute;
            top: 0;
            right: 0;
        }
        .txt_t{color: #323233;}
        .noData{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height:100vh;
        }
        .noData img{
            width: 100px;
            height:100px;
        }
        .draw_box{
            display: flex;
            justify-content: flex-start;
            align-items:center;
            flex-wrap: wrap;
            padding: 10px;
            margin-top: 44px;
        }
        .draw_item{
            width: 50%;
            height:170px;
            /*background:rgba(252,252,252,1);*/
            border-radius:4px;
            margin-bottom: 10px;
            padding: 10px;
        }
        /*.draw_item:nth-child(2n){
            margin-left: 10px;
        }*/
        .draw_item img{
            margin: auto;
            width: 100%;
            height: 130px;

        }
        .img_name{
            height:30px;
            line-height: 30px;
            /*background:rgba(255,255,255,1);*/
            border-radius:0px 0px 4px 4px;
            font-size:13px;
            font-family:PingFangSC-Regular,PingFang SC;
            font-weight:400;
            color:rgba(50,50,51,1);
            text-align: center;
        }
        #search{
            position: fixed;;
            top: 0;
            left: 0;
            right: 0;
        }
        .aui-searchbar{padding: 0 10px;}
    </style>
</head>

<body>
    <div class="aui-content aui-margin-b-15" style="margin-top:5px;"  id="app">
        <div class="aui-searchbar" id="search">
            <div class="aui-searchbar-input aui-border-radius">
                <i class="aui-iconfont aui-icon-search"></i>
                <form >
                    <input type="search" style="width:100%" v-model="filter_name" placeholder="请输入搜索内容" id="search-input"  @input="init(false)">
                </form>
            </div>
            <div class="aui-searchbar-cancel" tapmod  @click="init(false)">搜索</div>
        </div>
        <ul class="draw_box" v-if="imgBoxList.length" v-cloak>
            <li class="draw_item" v-for="items in imgBoxList" @click="openImgDetailFn(items)">
                <img v-lazy="items.drawing" alt="">
                <p class="img_name aui-ellipsis-1" v-text="items.drawingName"></p>
            </li>

        </ul>
        <div class="noData" v-else>
            <img src="../../../image/noData.png" alt="">
            <p>没有相关数据~</p>
        </div>

    </div>
    <script src="../../../script/api.js"></script>
    <script src="../../../script/sha1.js"></script>
    <script src="../../../script/common.js"></script>
    <script src="../../../script/vue.js"></script>
    <script src="../../../script/layimg.js"></script>
    <script type="text/javascript">
        Vue.use(VueLazyload, {
          error: '../../../image/lay_img.gif',
          loading: '../../../image/lay_img.gif'
        });
        apiready = function() {
            //上拉加载
            $app.uploding(
                function(){
                    vm.init(true)
                }
            )

            //下拉刷新
            $app.downrefresh(
                function(){
                    vm.init(false)
                }
            )

            //监听删除图纸完成事件刷新图纸列表
            api.addEventListener({
                name: 'actualmeasurement_del_img_event'
            }, function(ret, err){
                if( ret ){
                    vm.init(false)
                }else{
                     alert( JSON.stringify( err ) );
                }
            });




            var vm = new Vue({
                el:'#app',
                data:{
                    'imgBoxList':[],//图片列表
                    'currentPage':1,//当前页
                    'filter_name':'',//过滤条件
                },
                methods:{
                    //打开详情
                    openImgDetailFn:function(item){

                        api.openWin({
                            name: 'actualmeasurement_logdetail',
                            url: './logdetail.html',
                            pageParam: {
                                img_detail: item
                            }
                        });
                    },

                    //初始化img列表
                    init:function(isFlag){
                        var _this =this;
                        if(isFlag){
                            this.currentPage++
                        }else{
                            this.currentPage = 1;
                        }
                        var params ={
                            "projectId":  $api.getStorage('enterpriseId'),
                            "drawingName": this.filter_name || '',
                            "showCount": PAGE_NUMBER,
                            "currentPage": this.currentPage
                        }

                        $app.post(
                            true,
                            getDrawingList,
                            params,
                            function(ret){
                                console.log($api.jsonToStr(ret));
                                api.refreshHeaderLoadDone();
                                if(isFlag){
                                    if(ret.totalResult >_this.imgBoxList.length){
                                        _this.imgBoxList = _this.imgBoxList.concat(ret.obj)
                                    }else{
                                        api.toast({
                                            msg: '没有更多数据',
                                            duration: 2000,
                                            location: 'bottom'
                                        });

                                    }
                                }else{
                                    _this.imgBoxList= ret.obj;
                                }


                            }
                        )
                    },
                },
                created:function(){
                    this.init()
                }
            })

        }
    </script>
</body>

</html>
