        </div> -->
    </div>

    <script src="../../../script/api.js"></script>
    <script src="../../../script/vue.js"></script>

    <script>
        apiready = function() {
            //侵入式导航栏
            $api.fixStatusBar($api.dom('.header'));
            var offset = $api.offset($api.dom('.header'));
            api.openFrame({
                name: 'document_index_frame',
                url: './index_frame.html',
                rect: {
                    x: offset.l,
                    y: offset.h,
                    w: 'auto',
                    h: 'auto'
                },
                pageParam: {},
                bounces: true,
                bgColor: 'rgba(0,0,0,0)',
                vScrollBarEnabled: true,
                hScrollBarEnabled: true
            });
            var vm = new Vue({
                el:'#app',
                data:{
                },
                methods:{

                    openaddtask:function(){
                        api.openWin({
                            name: 'document_add',
                            url: './document_add.html',
                            pageParam: {
                                // name: 'test'
                            }
                        });
                    }
                }
            })
        }



        function closeWin() {
            api.closeWin();
        }
    </script>
